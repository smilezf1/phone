/* pages/my/my.wxss */

page {
  height: 100%;
  padding-top:70rpx;
  box-sizing:border-box;
}
.my {
  position: relative;
  height: 100%;
}
.navigationBarTitle {
  color: #000;
  margin-bottom: 30rpx;
  letter-spacing: 6rpx;
  margin-left: 14rpx;
}

.user {
  background: #e1cc9d;
  padding: 30rpx 20rpx;
  display: flex;
  align-items: center;
}

.userAvator {
  width: 120rpx;
  border-radius: 50%;
}

.login {
  color: #333;
  margin-left: 20rpx;
}

/* 提示框 */

.hintBox {
  width: 80%;
  position: absolute;
  top: 50%;
  left: 50%;
  transform: translate(-50%, -50%);
  background: white;
  border-radius: 10rpx;
  margin: 0 auto;
  box-sizing: border-box;
  z-index:1;
}

.hintBox-top {
  padding: 30rpx 50rpx 30rpx 50rpx;
  letter-spacing: 2rpx;
}

.hintBox-title {
  text-align: center;
  font-weight: bold;
}

.s-program-code {
  text-align: center;
  margin-top: 20rpx;
}

.s-program-code image {
  width: 150rpx;
}

.getImpower {
  color: #212121;
  margin: 10rpx 0;
}

.getImpowerDetail {
  color: #9f9f9f;
  font-size: 26rpx;
}
.hintBox-bottom{
  border-top:1rpx solid #eee;
  height:80rpx;
  display:flex;
  justify-content:space-around;
  align-items:center;
}
.hintBox-bottom view{
  height:100%;
  line-height:80rpx;
  padding:0 80rpx;
}
.hintBox-bottom .reject{
  border:1rpx solid transparent;
  border-right-color:#eee;
}
.hintBox-bottom .consent{
  color:#4E7DB2;
}
/* 遮罩层 */
.shade{
  position:absolute;
  top:0;
  bottom:0;
  left:0;
  right:0;
  box-sizing:border-box;
  margin-top:70rpx;
  background:rgba(0, 0, 0,0.2);
}