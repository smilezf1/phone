<!--index.wxml-->
<view class="index">
<!-- 顶部轮播图 -->
  <swiper class="slider-wrapper" indicator-dots="{{true}}" interval="3000" indicator-color="#fff" indicator-active-color="#418178" autoplay="{{true}}" circular="{{true}}">
    <swiper-item wx:for="{{imgList}}" wx:key>
      <navigator hover-class="none" open-type="navigate" url="/pages/specificImg/specificImg">
        <image mode="widthFix" src="{{item.imgurl}}" style="width:100%"></image>
      </navigator>
    </swiper-item>
  </swiper>
  <!-- 商家信息轮播 -->
  <swiper class="box-wrapper" circular="{{true}}" indicator-dots="{{true}}" indicator-active-color="#418178" autoplay="{{true}}">
    <swiper-item class="nav">
      <navigator class="education" hover-class="none" wx:for="{{navList}}" wx:key="{{item.id}}" wx:if="{{index<10}}" url="/pages/details/details">
        <icon class="iconfont {{item.icon}}"></icon>
        <text class="txt">{{item.content}}</text>
      </navigator>
    </swiper-item>
    <swiper-item class="nav">
      <navigator class="education" hover-class="none" wx:for="{{navList}}" wx:key="{{item.id}}" wx:if="{{index>=10}}" url="/pages/details/details">
        <icon class="iconfont {{item.icon}}"></icon>
        <text class="txt">{{item.content}}</text>
      </navigator>
    </swiper-item>
  </swiper>
  <view class="imgBox">
    <image wx:for="{{imgList}}" wx:key src="{{item.imgurl}}" mode="widthFix" style="width:100%"></image>
  </view>
</view>